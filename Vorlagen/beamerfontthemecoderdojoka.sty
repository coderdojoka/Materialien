\ProvidesPackage{beamerfontthemecoderdojoka}

\RequirePackage[type1]{FiraSans}

\setbeamerfont{title}{family*=\fira@family, series*=k, size=\Large}
\setbeamerfont{author}{family*=\fira@family, series*=el, size=\small}
\setbeamerfont{date}{family*=\fira@family, series*=el, size=\small}

\setbeamerfont{section title}{family*=\fira@family, series*=k, size=\Large}

\setbeamerfont{block title}{family*=\fira@family, series*=k, size=\normalsize}
\setbeamerfont{block title alerted}{family*=\fira@family, series*=k, size=\normalsize}

\setbeamerfont{subtitle}{family*=\fira@family, series*=l, size=\fontsize{12}{14}}
\setbeamerfont{frametitle}{family*=\fira@family, series=\scshape, size=\large}

\setbeamerfont{caption}{size=\small}
\setbeamerfont{caption name}{family*=\fira@family, series*=k}

\setbeamerfont{description item}{family*=\fira@family, series*=k}

\setbeamerfont{page number in head/foot}{size=\scriptsize}

\linespread{1.15}
